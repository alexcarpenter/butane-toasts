{
  "name": "butane-toasts",
  "version": "0.0.1-alpha.0",
  "description": "Library for creating toast notifications",
  "main": "dist/butane-toast.cjs.js",
  "module": "dist/butane-toast.esm.js",
  "browser": "dist/butane-toast.umd.js",
  "scripts": {
    "build": "rollup -c && npm run cp:demo",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch ./src/**/*.js",
    "cp:demo": "cp dist/butane-toast.umd.js demo/_includes/butane-toasts.js && cp src/index.css demo/_includes/butane-toasts.css"
  },
  "author": "alexcarpenter",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^6.7.1",
    "@testing-library/jest-dom": "^4.1.2",
    "jest": "^24.9.0",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "files": [
    "dist"
  ]
}
